#ifndef PIN_DEFS_H_
#define PIN_DEFS_H_

#include <stdint.h>
#include "stm32g0xx.h"
#include "stm32g0xx_hal_gpio.h"

// Pin Definition Enum.  MUST maintain same order as pin_defs[].
typedef enum pin_id
{
	BASE_BUTTON,
	LED_RED,
	LED_YELLOW,
	LED_GREEN,
	WPT_PWM,
	NFC_VOUT_SENSE,
	PIEZO_PWM,
	IR_UART_TX,
	IR_UART_RX,
	NFC_POWER_ENABLE,
	NFC_FD_INT,
	NFC_I2C_SCL,
	NFC_I2C_SDA,
	NUM_PINS
}pin_id_t;

typedef enum
{
    IO_INTERRUPT_DISABLED                 = 0,    /* Enumerations based on the existing definitions in mkl-bsp     */
    IO_INTERRUPT_RISING_EDGE              = 0x09,
    IO_INTERRUPT_FALLING_EDGE             = 0x0A,
    IO_INTERRUPT_RISING_AND_FALLING_EDGES = 0x0B
}gpio_interrupt_config;


typedef GPIO_InitTypeDef pin_config_t;
typedef GPIO_TypeDef pin_port_t;

extern pin_config_t const pin_defs[NUM_PINS];
extern pin_port_t* const port_defs[NUM_PINS];

#endif
